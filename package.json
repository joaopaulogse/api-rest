{
    "name": "projeto-api",
    "version": "1.0.0",
    "main": "src/server.js",
    "license": "MIT",
    "scripts": {
        "dev": "cross-env NODE_ENV=development nodemon ./src/server.js",
        "start": "node src/server.js",
        "build": "pm2 start ./src/server.js --name API-REST -f",
        "production": "pm2 start ./src/server.js --name API-REST",
        "lint": "eslint src/**/*.js ",
        "lint:fix": "eslint src/**/*.js --fix --ignore-path .gitignore",
        "test": "cross-env NODE_ENV=test jest",
        "test-integration-jest": "cross-env NODE_ENV=test jest --forceExit",
        "test-coverage": "cross-env NODE_ENV=test istanbul cover jest",
        "test-integration:mocha": "cross-env NODE_ENV=test mocha --opts ./src/api/tests/integration/mocha.opts ./src/api/tests/integration/**/*.js",
        "docker:dev": "docker-compose -f docker-compose.dev.yml up"
    },
    "engines": {
        "node": "^8.2.1"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/joaopaulogse/api-rest.git"
    },
    "dependencies": {
        "apidoc": "^0.17.6",
        "bcrypt": "^1.0.3",
        "bcrypt-nodejs": "^0.0.3",
        "body-parser": "^1.18.2",
        "compression": "^1.7.2",
        "cors": "^2.8.4",
        "cross-env": "^5.1.3",
        "dotenv": "^4.0.0",
        "dotenv-safe": "^4.0.4",
        "express": "^4.16.2",
        "express-graphql": "^0.6.12",
        "express-session": "^1.15.6",
        "express-validation": "^1.0.2",
        "global": "^4.3.2",
        "graphql": "^0.11.7",
        "helmet": "^3.12.0",
        "http-status": "^1.0.1",
        "joi": "^10.6.0",
        "jsonwebtoken": "^8.2.0",
        "mongoose": "^5.7.5",
        "morgan": "^1.9.0",
        "passport": "^0.4.0",
        "passport-local": "^1.0.0",
        "pg": "^7.4.1",
        "pg-hstore": "^2.3.2",
        "pm2": "^2.10.1",
        "sequelize": "^4.35.2",
        "sequelize-cli": "^3.2.0",
        "commander": "^2.14.1"
    },
    "devDependencies": {
        "chai": "^4.1.2",
        "eslint": "^4.18.2",
        "eslint-config-airbnb": "^15.1.0",
        "eslint-plugin-chai-expect": "^1.1.1",
        "eslint-plugin-import": "^2.9.0",
        "eslint-plugin-jsx-a11y": "^5.1.1",
        "eslint-plugin-react": "^7.7.0",
        "istanbul": "^0.4.5",
        "jest": "^20.0.4",
        "jest-cli": "^21.2.1",
        "mocha": "^3.5.3",
        "nodemon": "^1.17.1",
        "supertest": "^3.0.0"
    },
    "jest": {
        "collectCoverage": true,
        "coverageThreshold": {
            "global": {
                "branches": 0,
                "functions": 0,
                "lines": 0,
                "statements": 0
            }
        }
    },
    "eslintIgnore": [
        "node_modules/*"
    ]
}
